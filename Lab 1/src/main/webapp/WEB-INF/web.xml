<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.example.lab2web.controller.ControllerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AreaCheck</servlet-name>
        <servlet-class>com.example.lab2web.controller.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AreaCheck</servlet-name>
        <url-pattern>/area-check-servlet</url-pattern>
    </servlet-mapping>
</web-app>